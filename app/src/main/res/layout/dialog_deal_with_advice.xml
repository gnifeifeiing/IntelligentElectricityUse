<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/deal_with_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="处理意见"
        android:textSize="20sp"
        android:textColor="@color/black" />


    <EditText
        android:id="@+id/dealAdvice_adviceEt"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:background="@drawable/deal_with_dialog_edittext_bg"
        android:hint="请输入处理意见"
        android:textColor="@color/activity_text_default"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#b2b6bb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dealAdvice_cancleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@color/activity_text_default"
            android:textSize="16sp" />

        <View
            android:id="@+id/view_v"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#b2b6bb" />

        <TextView
            android:id="@+id/dealAdvice_submitTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="#107fff"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>